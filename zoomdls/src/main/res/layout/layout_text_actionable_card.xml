<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp">

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_title"
            style="@style/OverlineSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/text_action"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Drop-Off Location" />

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_desc"
            style="@style/CaptionPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/text_title"
            app:layout_constraintRight_toLeftOf="@+id/text_action"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            android:layout_marginEnd="16dp"
            tools:text="Forum Centre City, Hyderali Road, Nazarbad, Mysuru, Karnataka - 570010" />

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/ever_green_06"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Change" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
