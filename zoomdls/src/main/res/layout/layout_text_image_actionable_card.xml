<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingBottom="16dp">

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_title"
            style="@style/Title1Primary"
            tools:text="Can’t Find The Right Car!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_info"/>

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_desc"
            style="@style/CaptionInactive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:layout_constraintStart_toStartOf="@+id/text_title"
            app:layout_constraintEnd_toStartOf="@+id/image_info"
            tools:text="The car I was looking for isn’t listed here The car I was looking for isn’t listed here" />

        <com.zoomcar.uikit.textview.ZTextView
            android:id="@+id/text_action"
            style="@style/Button1TintedEvergreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Notify Me"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_desc"/>

        <com.zoomcar.uikit.imageview.ZImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/image_info"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
