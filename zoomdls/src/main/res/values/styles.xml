<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ZBottomSheetDialogStyle.Parent" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ZBottomSheetDialogStyle" parent="ZBottomSheetDialogStyle.Parent" />

    <style name="ZMaterialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Style attributes -->
        <!-- Radius -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>

        <!-- Stroke -->
        <item name="boxStrokeColor">@color/ever_green_06</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeErrorColor">@color/fire_red_06</item>

        <!-- Hint Resting state -->
        <item name="android:textColorHint">@color/phantom_grey_10</item>

        <!-- Hint Floating state -->
        <item name="hintTextColor">@color/ever_green_06</item>

        <item name="errorTextColor">@color/fire_red_07</item>
        <item name="errorIconDrawable">@null</item>

        <!-- Hint Appearance, only affects size -->
        <item name="hintTextAppearance">@style/ZMaterialTextInputHintText</item>

        <!-- Error Appearance, only affects size -->
        <item name="errorTextAppearance">@style/ZMaterialTextInputLayoutErrorText</item>
    </style>

    <style name="ZMaterialTextInputHintText" parent="@style/Body1Primary">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ZMaterialTextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ZMaterialTextInputLayoutTheme">
        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/zmaterial_edit_text_color</item>
        <!-- From Body2Default -->
        <!-- Text Size -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/phantom_grey_10</item>
        <item name="android:fontFamily">@font/ibm_plex_regular</item>
        <item name="android:textCursorDrawable">@drawable/z_cursor_evergreen_06</item>
    </style>

    <style name="MaterialButton.ZoomMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Button1Inactive</item>
        <item name="backgroundTint">@color/zmaterial_action_button_bg_selector</item>
    </style>
    <style name="ZMaterialButtonStyle" parent="MaterialButton.ZoomMaterialButtonStyle" />

</resources>