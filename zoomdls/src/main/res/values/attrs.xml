<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ZSelectionTextView">
        <attr name="zstv_selected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ZFlowTextSelectionLayout">
        <attr name="selection_type" format="enum">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ZDisclaimerView">
        <attr name="disclaimer_type" format="enum">
            <enum name="info" value="0" />
            <enum name="warning" value="1" />
            <enum name="debug" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ZChipActionButton">
        <attr name="type" format="enum">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
            <enum name="transient_dark" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="av_progress_value" format="integer" />
        <attr name="av_stroke_width" format="integer" />
        <attr name="av_start_color" format="string" />
        <attr name="av_end_color" format="string" />
        <attr name="av_animation_duration" format="integer" />
        <attr name="av_auto_animate" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ArcProgressView">
        <attr name="apv_progress_value" format="integer" />
        <attr name="apv_sub_text" format="string" />
        <attr name="apv_stroke_width" format="integer" />
        <attr name="apv_start_color" format="string" />
        <attr name="apv_end_color" format="string" />
        <attr name="apv_animation_duration" format="integer" />
        <attr name="apv_auto_animate" format="boolean" />
    </declare-styleable>
</resources>
